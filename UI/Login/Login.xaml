<Window x:Class="AgroVeterinaria.UI.Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgroVeterinaria.UI.Login"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="380"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition>
                </RowDefinition>
            </Grid.RowDefinitions>
            <Border CornerRadius="10" Grid.Row="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7be9f6" Offset="0.0"/>
                        <GradientStop Color="#f083da" Offset="1"/>

                    </LinearGradientBrush>


                </Border.Background>
            </Border>
            <StackPanel Orientation="Vertical">
                <StackPanel VerticalAlignment="Center">
                    <Image Source="perritofin.png"  Width="100"/>
                    <TextBlock Text=" Agropecuaria Emil"
                 FontWeight="Light"  
                 FontFamily="Georgia" Width="103"   
                  Foreground="Black"
                  HorizontalAlignment="Center"        />

                </StackPanel>
                <StackPanel Margin="0,99,0,30">
                    <TextBox FontFamily=" helvetica"
                 
                 FontWeight="Light"   
                  Text="usuario"
                   FontSize="20"
                    HorizontalAlignment="Center" Height="20"
                     Background="Transparent"/>
                    
                    
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="UsuarioNameTextBox" Width="300" Height="20"/>
                </StackPanel>



                <StackPanel Margin="0,30,0,0">
                    <TextBox FontFamily=" helvetica"
                 
                 FontWeight="Light"   
                  Text="Contraseña"
                   FontSize="20"
                    HorizontalAlignment="Center" Height="20"
                     Background="Transparent"/>

                </StackPanel>
                <StackPanel Margin="0,30,0,0">
                    <TextBox x:Name="ClaveTextBox" Width="300" Height="20"/>
                </StackPanel>
                

            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
